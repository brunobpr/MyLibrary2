<!DOCTYPE html>
<html>

<head>
	<link rel='stylesheet' href='/stylesheets/style.css' />
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>New Book Registration</title>
</head>

<body style="margin:0px; padding:0px; width:100%; background-color: black;">

	<% include templates/header ; %>
	<div class="container" style="background-color: white;">
		<h1 style="position:relative; color: white; text-align: center;">Update My Libray</h1>

		<ul class="collapsible" style="position:relative; background-color: white;">
			<% 
                var id = 0;
                data.books.forEach(function (book){%>
			<li>
				<div class="collapsible-header"><i class="material-icons">edit</i> <%= book.Title%> |
					<%= book.Subtitle%> by <%= book.Autor%></div>
				<div class="collapsible-body">
					<form class="col s12" enctype="application/json" action="/update/book" method="POST">
						<div class="row">
							<div class="input-field col s12">
                                <input type="hidden" name="id" value="<%= id %>">
								<input placeholder="<%= book.Title%> " name="title" type="text" class="validate" required="required" pattern="[a-zA-Z0-9]+.{1,25}" value="<%= book.Title%> ">
								<label for="title">Title *</label>
								<span class="helper-text" data-error="This is a mandatory field" data-success="Valid"></span>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<input placeholder="<%= book.Subtitle %>"  name="subtitle" type="text" class="validate" required="required" pattern="[a-zA-Z0-9]+.{2,25}" value="<%= book.Subtitle %>">
								<label for="subtitle">Subtitle *</label>
								<span class="helper-text" data-error="This is a mandatory field" data-success="Valid"></span>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<input placeholder="<%= book.Autor %>" name="author" type="text" class="validate" required="required" pattern="[A-Za-z]+.{2,25}" value="<%= book.Autor %>">
								<label for="author">Author *</label>
								<span class="helper-text" data-error="This is a mandatory field" data-success="Valid"></span>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<input placeholder="<%= book.Publisher %>" name="publisher" type="text" class="validate" required="required" pattern="[A-Za-z]+.{2,25}" value="<%= book.Publisher %>">
								<label for="publisher">Publisher *</label>
								<span class="helper-text" data-error="This is a mandatory field" data-success="Valid"></span>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<input placeholder="<%= book.Year %>" name="year_edition" type="text" class="validate" required="required" value="<%= book.Year %>">
								<label for="year_edition">Edition *</label>
							</div>
							<span class="helper-text" data-error="This is a mandatory field" data-success="Valid"></span>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<input placeholder="<%= book.ReadYear %>" name="read_year" type="text" class="validate" value="<%= book.ReadYear %>">
								<label for="year_edition">Read in</label>
							</div>
							<span class="helper-text" data-error="This is a mandatory field" data-success="Valid"></span>
						</div>
						<button class="btn waves-effect waves-light" type="submit" name="post">Submit
                        <i class="material-icons right">send</i>
                        </button>
					</form>
					<form class="col s12" enctype="application/json" action="/delete/book" method="POST">
                        <input type="hidden" name="id" value="<%= id %>">
						<button class="btn waves-effect waves-light" type="submit" name="post" style="margin-top: -65px; margin-left: 150px;">Delete
                        <i class="material-icons right">delete</i>
                        </button>
					</form>
				</div>
			</li>
			<% id++;
                });%>
		</ul>
	</div>
	<script>
		M.AutoInit();
	</script>
	<script>
		function showform(id_book){
            alert(id_book);
        }
	</script>
</body>

</html>